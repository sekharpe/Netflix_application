pipeline {
    agent any
    environment { 
        DOCKRHUB_CREDENTIALS=credentials('dockerhub')
    }
    stages {
        stage('Clone repository') {
            steps {
                git 'https://github.com/sekharpe/Netflix_application.git'
            }
        }

        stage('Build') {
            steps {
                sh 'docker build -t netflix_application_1:latest .'
            }
        }
        stage('login') {
            steps {
            sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }

        stage('Push to DockerHub') {
            steps {
                    sh 'docker push sekhar89/netflix_application_1:latest'
                }
            }
            stage('logout') {
            steps {
            sh 'docker logout'
            }
            }
    }
}
